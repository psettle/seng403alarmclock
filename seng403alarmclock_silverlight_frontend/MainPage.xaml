                        <TextBox x:Name="ct_MinuteInput" BorderBrush="Black" FontSize="20" HorizontalAlignment="Left" Height="34" Margin="259,1,0,0" TextWrapping="Wrap" Text="MM" VerticalAlignment="Top" Width="52" Background="DarkGray" TextAlignment="Center" Grid.Row="1"/>
                        <RepeatButton x:Name="ct_MinuteDown" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Width="52" Margin="259,13,0,-18" Template="{x:Null}" Grid.Row="1">
                            <Grid>
                                <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5" Margin="0,22,0,-22"/>
                                <sdk:Label FontFamily="Segoe UI Symbol" Content="&#xE011;" FontSize="50" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,2,0"/>
                            </Grid>
                        </RepeatButton>
                        <Button x:Name="ct_AMPM" Height="34" Margin="334,36,0,0" Template="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="46" Grid.RowSpan="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="16*"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5" Grid.RowSpan="2"/>
                                <sdk:Label Content="AM" FontSize="20" Foreground="Black" HorizontalAlignment="Center" Margin="8,0,7,0" Grid.RowSpan="2"/>
                                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Grid.RowSpan="2" RenderTransformOrigin="-0.196,0.603"/>
                            </Grid>
