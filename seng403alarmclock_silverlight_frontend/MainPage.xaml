                        <TextBox x:Name="ct_HourInput" BorderBrush="Black" FontSize="20" HorizontalAlignment="Left" Height="34" Margin="162,1,0,0" TextWrapping="Wrap" Text="HH" VerticalAlignment="Top" Width="52" Background="DarkGray" TextAlignment="Center" Grid.Row="1"/>
