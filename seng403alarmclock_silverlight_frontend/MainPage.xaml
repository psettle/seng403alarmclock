<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="seng403alarmclock_silverlight_frontend.MainPage"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
    d:DesignHeight="1050" d:DesignWidth="1920">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.Resources>
            <Storyboard x:Name="AddEditSlideIn">
                <DoubleAnimation
                    Storyboard.TargetName="AddEditPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="0"
                    To="400"
                    Duration="00:00:00.7"
                />
                <DoubleAnimation
                    Storyboard.TargetName="mainPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="0"
                    To="400"
                    Duration="00:00:00.7"
                />
                <DoubleAnimation
                    Storyboard.TargetName="mainPanel" 
                    Storyboard.TargetProperty="Width" 
                    From="1920"
                    To="1520"
                    Duration="00:00:00.7"
                />
            </Storyboard>
            <Storyboard x:Name="AddEditSlideOut">
                <DoubleAnimation
                    Storyboard.TargetName="AddEditPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="400"
                    To="0"
                    Duration="00:00:00.7"
                />
                <DoubleAnimation
                    Storyboard.TargetName="mainPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="400"
                    To="0"
                    Duration="00:00:00.7"
                />
                <DoubleAnimation
                    Storyboard.TargetName="mainPanel" 
                    Storyboard.TargetProperty="Width" 
                    From="1520"
                    To="1920"
                    Duration="00:00:00.7"
                />
            </Storyboard>
        </Grid.Resources>
        <Canvas>
            <Grid  x:Name="mainPanel"  Height="1050" Width="1920" Background="Black">
                <TextBlock x:Name="time" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="200" Canvas.Left="247" Canvas.Top="303" Margin="92,384,0,0" Foreground="Gray"/>
                <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="92,97,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </Canvas>
        <Canvas>
            <Grid x:Name="AddEditPanel" HorizontalAlignment="Left" Height="1050" Margin="-400,0,0,0" VerticalAlignment="Top" Width="400" Background="DarkGray">


                <sdk:Label x:Name="AddEditTitle" HorizontalAlignment="Left" Height="58" Margin="51,30,0,0" VerticalAlignment="Top" Width="293" Content="Add Alarm" FontSize="50"/>
                <TextBox x:Name="AddEditLabelBox" HorizontalAlignment="Left" Height="39" Margin="152,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="192"/>
                <sdk:Label HorizontalAlignment="Left" Height="39" Margin="51,121,0,0" VerticalAlignment="Top" Width="96" FontSize="30" Content="Name"/>

                <!-- The 4 repeat buttons, 2 text boxes, button and textblock below are all controlled by TimeSelector -->
                <RepeatButton x:Name="HourUp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Width="52" Margin="90,165,0,0" Template="{x:Null}">
                    <RepeatButton.Content>
                        <Grid>
                            <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5"/>
                            <sdk:Label FontFamily="Segoe UI Symbol" Content="&#xE010;" FontSize="50" Foreground="Black" HorizontalAlignment="Center"/>
                        </Grid>
                    </RepeatButton.Content>
                </RepeatButton>
                <RepeatButton x:Name="MinuteUp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Width="52" Margin="184,165,0,0" Template="{x:Null}">
                    <RepeatButton.Content>
                        <Grid>
                            <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5"/>
                            <sdk:Label FontFamily="Segoe UI Symbol" Content="&#xE010;" FontSize="50" Foreground="Black" HorizontalAlignment="Center"/>
                        </Grid>
                    </RepeatButton.Content>
                </RepeatButton>
                <RepeatButton x:Name="HourDown" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Width="52"  Margin="90,238,0,0" Template="{x:Null}">
                    <RepeatButton.Content>
                        <Grid>
                            <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5"/>
                            <sdk:Label FontFamily="Segoe UI Symbol" Content="&#xE011;" FontSize="50" Foreground="Black" HorizontalAlignment="Center"/>
                        </Grid>
                    </RepeatButton.Content>
                </RepeatButton>
                <RepeatButton x:Name="MinuteDown" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Width="52" Margin="184,238,0,0" Template="{x:Null}">
                    <RepeatButton.Content>
                        <Grid>
                            <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5"/>
                            <sdk:Label FontFamily="Segoe UI Symbol" Content="&#xE011;" FontSize="50" Foreground="Black" HorizontalAlignment="Center"/>
                        </Grid>
                    </RepeatButton.Content>
                </RepeatButton>
                <TextBox x:Name="HourInput" BorderBrush="Black" FontSize="20" HorizontalAlignment="Left" Height="34" Margin="90,226,0,0" TextWrapping="Wrap" Text="HH" VerticalAlignment="Top" Width="52" Background="DarkGray" TextAlignment="Center"/>
                <TextBox x:Name="MinuteInput" BorderBrush="Black" FontSize="20" HorizontalAlignment="Left" Height="34" Margin="184,226,0,0" TextWrapping="Wrap" Text="MM" VerticalAlignment="Top" Width="52" Background="DarkGray" TextAlignment="Center"/>
                <Button x:Name="AMPM" Height="34" Margin="277,226,0,0" Template="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="46">
                    <Button.Content>
                        <Grid>
                            <Rectangle Fill="DarkGray" RadiusX="5" RadiusY="5"/>
                            <sdk:Label Content="AM" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"/>
                        </Grid>
                    </Button.Content>
                </Button>
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="156,220,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontSize="30"/>
                <!--(End TimeSelector Elements)-->
                
                
                
                <Button x:Name="SaveAlarm" Height="30" Margin="228,871,0,0" Template="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="147">
                    <Button.Content>
                        <Grid>
                            <Rectangle Fill="Black" RadiusX="5" RadiusY="5"/>
                            <sdk:Label Content="Save Alarm" FontSize="20" Foreground="DarkGray" HorizontalAlignment="Center"/>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"/>
                        </Grid>
                    </Button.Content>
                </Button>
                <Button x:Name="CancelAddEdit"  HorizontalAlignment="Left" Margin="30,871,0,0" Template="{x:Null}" Width="147" Height="30" VerticalAlignment="Top">
                    <Button.Content>
                        <Grid>
                            <Rectangle Fill="Black" RadiusX="5" RadiusY="5"/>
                            <sdk:Label Content="Cancel" FontSize="20" Foreground="DarkGray" HorizontalAlignment="Center"/>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"/>
                        </Grid>
                    </Button.Content>
                </Button>
                


            </Grid>
        </Canvas>
    </Grid>
</UserControl>
