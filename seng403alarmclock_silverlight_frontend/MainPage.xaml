<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="seng403alarmclock_silverlight_frontend.MainPage"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
    d:DesignHeight="1050" d:DesignWidth="1920">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.Resources>
            <Storyboard x:Name="AddEditSlideIn">
                <DoubleAnimation
                    Storyboard.TargetName="AddEditPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="1920"
                    To="1520"
                    Duration="00:00:00.1"
                />
            </Storyboard>
            <Storyboard x:Name="AddEditSlideOut">
                <DoubleAnimation
                    Storyboard.TargetName="AddEditPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="1520"
                    To="1920"
                    Duration="00:00:00.1"
                />
            </Storyboard>

            <Storyboard x:Name="OptionsSlideIn">
                <DoubleAnimation
                    Storyboard.TargetName="OptionsPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="-400"
                    To="0"
                    Duration="00:00:00.1"
                />
            </Storyboard>
            <Storyboard x:Name="OptionsSlideOut">
                <DoubleAnimation
                    Storyboard.TargetName="OptionsPanel" 
                    Storyboard.TargetProperty="(Canvas.Left)"
                    From="0"
                    To="-400"
                    Duration="00:00:00.1"
                />
            </Storyboard>
        </Grid.Resources>
        <Canvas x:Name="mainApp">
            <Grid  x:Name="mainPanel"  Height="1050" Width="1920" Background="Black">
                <TextBlock x:Name="time" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="200" Canvas.Left="247" Canvas.Top="303" Margin="92,384,0,0" Foreground="Gray"/>
