<Window x:Class="seng403alarmclock.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:seng403alarmclock"
        mc:Ignorable="d"
        Title="Controls" Height="158.621" Width="234.562">
    <Viewbox>
        <Grid>
            <Button x:Name="AddAlarm" Content="Add" BorderThickness="1" BorderBrush="DarkGray" Background="White" HorizontalAlignment="Left" Height="23" Margin="110,5,0,0" VerticalAlignment="Top" Width="35"/>
            <TextBox x:Name="hours" BorderThickness="0" HorizontalAlignment="Left" Height="14" Margin="7,10,0,0" TextWrapping="Wrap" Text="HH" VerticalAlignment="Top" Width="24"/>
            <TextBox x:Name="minutes" BorderThickness="0" HorizontalAlignment="Left" Height="14" Margin="41,10,0,0" TextWrapping="Wrap" Text="MM" VerticalAlignment="Top" Width="38"/>
            <TextBlock x:Name="colon" HorizontalAlignment="Left" Height="14" Margin="31,10,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" Width="5"/>
            <Label x:Name="label" Content="(24hr)" HorizontalAlignment="Left" Height="32" Margin="66,4,0,0" VerticalAlignment="Top" Width="43"/>
            <Button x:Name="hrUp" Content="/\" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Click="IncreaseHoursClick" Margin="7,-15,0,0"/>
            <Button x:Name="minUp" Content="/\" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Click="IncreaseMinutesClick" Margin="44,-15,0,0"/>
            <Button x:Name="minDown" Content="\/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Click="DecreaseMinutesClick" Margin="44,29,0,-13"/>
            <Button x:Name="hrDown" Content="\/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Click="DecreaseHoursClick" Margin="7,29,0,-13"/>
        </Grid>
    </Viewbox>
</Window>
